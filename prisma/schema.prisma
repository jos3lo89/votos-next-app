generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  last_name String
  codigo    String   @unique
  email     String   @unique
  password  String
  role      Role     @default(admin)
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

enum Role {
  user
  admin
}
